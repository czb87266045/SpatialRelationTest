<Window x:Class="SpatialRelationTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpatialRelationTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="601" Width="600">
    <Grid>
    <Canvas x:Name="myCanvas"
            Width="400" Height="400" Background="Gray" 
            MouseLeftButtonDown="myCanvas_MouseLeftButtonDown" MouseLeftButtonUp="myCanvas_MouseLeftButtonUp" MouseMove="myCanvas_MouseMove">
            <Image x:Name="myImage" Width="400" Height="400" ></Image>
    </Canvas>
    </Grid>
</Window>
